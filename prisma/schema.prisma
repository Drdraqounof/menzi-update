model Comment {
  id         Int      @id @default(autoincrement())
  content    String
  createdAt  DateTime @default(now()) @map("created_at")
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  image      PublishedImage? @relation(fields: [imageId], references: [id])
  imageId    Int?
  video      PublishedVideo? @relation(fields: [videoId], references: [id])
  videoId    Int?
}

model Heart {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  image      PublishedImage? @relation(fields: [imageId], references: [id])
  imageId    Int?
  video      PublishedVideo? @relation(fields: [videoId], references: [id])
  videoId    Int?
  createdAt  DateTime @default(now()) @map("created_at")
  @@unique([userId, imageId, videoId])
}

model PublishedVideo {
  id        Int      @id @default(autoincrement())
  videoUrl  String   @map("video_url")
  caption   String?
  hearts    Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
  comments  Comment[]
  heartedBy Heart[]
  @@map("published_videos")
}
